{
  "Sample": {
    "Title": "A .NET MAUI app using MSAL.NET to sign-in users and calling MS Graph Api",
    "Level": 200,
    "Client": "MAUI (iOS, Android, UWP)",
    "RepositoryUrl": "active-directory-xamarin-native-v2",
    "Endpoint": "AAD v2.0",
    "Description": "A .NET MAUI app using MSAL.NET to sign-in users and acquiring a token to call Microsoft Graph Api",
    "Languages": [ "csharp" ],
    "Products": [ "maui", "azure-active-directory" ],
    "Library": [ "MSAL.NET" ],
    "Service": "Microsoft Graph",
    "Platform": "MAUI"
  },
  "ReadmeAboutTheCode": {
    "IncludeFilePath": "../ReadmeFiles/AboutTheCode.md"
  },
  "ReadmeTroubleshooting": {
    "IncludeFilePath": "../ReadmeFiles/TroubleShooting.md"
  },
  "ReadmeNextSteps": {
    "IncludeFilePath": "../ReadmeFiles/NextSteps.md"
  },
  /*
    This section describes the Azure AD Applications to configure, and their dependencies
  */
  "AADApps": [
    {
      "Sample": {
        "SampleSubPath": "MAUI/MauiAppBasic"
      },
      "Id": "client",
      "Name": "active-directory-maui-v2",
      "Kind": "Mobile",
      "ReplyUrls": "http://localhost",
      "SampleSubPath": "MAUI/MauiAppBasic",
      "RequiredResourcesAccess": [
        {
          "Resource": "Microsoft Graph",
          "DelegatedPermissions": [
            "User.Read"
          ]
        }
      ],
      "DefaultDesktopAndMobileRedirectUriSettings": {
        "UsesDefaultNativeClientRedirectUri": true,
        "UsesDefaultMsalRedirectUri": true
      }
    }
  ],
  /*
    This section describes how to update the code in configuration files from the apps coordinates, once the apps
    are created in Azure AD.
    Each section describes a configuration file, for one of the apps, it's type (XML, JSon, plain text), its location
    with respect to the root of the sample, and the mappping (which string in the config file is mapped to which value
  */
  "CodeConfiguration": [
    {
      "App": "client",
      "SettingKind": "Replace",
      "SettingFile": "\\..\\appsettings.json",
      "Mappings": [
        {
          "key": "[Enter the Client Id of the service (Application ID obtained from the Azure portal), e.g. ba74781c2-53c2-442a-97c2-3d60re42f403]",
          "value": ".AppId"
        }
      ]
    },
    {
      "App": "client",
      "SettingKind": "Replace",
      "SettingFile": "\\..\\appsettings.json",
      "Mappings": [
        {
          "key": "[Enter 'common', or 'organizations' or the Tenant Id (Obtained from the Azure portal. Select 'Endpoints' from the 'App registrations' blade and use the GUID in any of the URLs), e.g. da41245a5-11b3-996c-00a8-4d99re19f292]",
          "value": "$tenantId"
        }
      ]
    },
    {
      "App": "client",
      "SettingKind": "Replace",
      "SettingFile": "\\..\\Platforms\\Android\\MsalActivity.cs",
      "Mappings": [
        {
          "key": "[REPLACE THIS WITH THE CLIENT ID OF YOUR APP]",
          "value": ".AppId"
        }
      ]
    },
    {
      "App": "client",
      "SettingKind": "Replace",
      "SettingFile": "\\..\\Platforms\\Android\\AndroidManifest.xml",
      "Mappings": [
        {
          "key": "[REPLACE THIS WITH THE CLIENT ID OF YOUR APP]",
          "value": ".AppId"
        }
      ]
    }
  ]
}